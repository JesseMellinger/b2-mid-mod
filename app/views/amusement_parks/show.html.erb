<h1><%= @amusement_park.name %></h1>
<h2>Admissions: $<%= @amusement_park.admission_price %></h2>

<div id="rides">
  <h2>Rides: </h2>
  <% @amusement_park.rides.each do |ride| %>
    <section id="ride-<%= ride.id %>">
      <%= ride.name %>
    </section>
  <% end %>
</div>

<h2>Average Thrill Rating of Rides: <%= @amusement_park.average_thrill_rating_of_rides.to_f.round(1) %>/10</h2>
